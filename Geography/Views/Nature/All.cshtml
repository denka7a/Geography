@model NatureSearchViewModel

<div style="text-align:center;"><img src="https://good-nature-blog-uploads.s3.amazonaws.com/uploads/2022/01/good-nature-homepage-hero_2-scaled.jpg" style="overflow: hidden; position: relative; width:1000px; height:400px;" /></div>
<h2>All natures:  </h2>

<div class="row">
    <form method="get">
        <div class="form-group col-md-5">
            <div class="form-group">
                <label asp-for="SearchTerm"></label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Nature object" />
            </div>
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </form>
</div>
@foreach (var obj in Model.NatureObjects)
{
    <h1>@obj.NatureType</h1>
    <h2>@obj.Name</h2>
    <img src="@obj.URL" style="overflow: hidden; position: relative; width:300px; height:300px;" />
    <h3>@obj.Information</h3>
    <td>
        <a asp-controller="Nature" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">Edit</a>
        <a asp-controller="Nature" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
    </td>
}