@model List<SouvenirViewModel>

<div style="text-align:center;"><img src="https://www.jumblebee.co.uk/site/wp-content/uploads/2014/06/JB-FE-Shop_10.png" style="overflow: hidden; position: relative; width:600px; height:400px;" /></div>

<h2>There you can buy souvenirs:  </h2>

@foreach (var obj in Model)
{
    <h1>@obj.Name</h1>
    <img src="@obj.URL" style="overflow: hidden; position: relative; width:200px; height:200px;" />
    <h3>@obj.Price</h3>
    <a asp-controller="Shop" asp-action="Buy" asp-route-id="@obj.Id" class="btn btn-warning">Buy</a>
}