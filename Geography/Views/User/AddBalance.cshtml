@using Geography.Models.User
@model UserViewModel
<form method="post">
    <h2>Username: @this.User.Identity.Name </h2>
    <h2>Balance: @Model.Balance</h2>
    <div class="form-group">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" class="form-control" placeholder="Here you add balance">
        <span asp-validation-for="Balance" class="small text-danger"></span>
    </div>
    <td>
        <button type="submit" class="btn btn-primary">Submit</button>
    </td>
</form>